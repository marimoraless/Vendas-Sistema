@model SistemaVendas.Models.Venda

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Venda</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendaID" />
            <div class="form-group">
                <label asp-for="ClienteID" class="control-label"></label>
                <input asp-for="ClienteID" class="form-control" />
                <span asp-validation-for="ClienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoID" class="control-label"></label>
                <input asp-for="ProdutoID" class="form-control" />
                <span asp-validation-for="ProdutoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionárioID" class="control-label"></label>
                <input asp-for="FuncionárioID" class="form-control" />
                <span asp-validation-for="FuncionárioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalVenda" class="control-label"></label>
                <input asp-for="TotalVenda" class="form-control" />
                <span asp-validation-for="TotalVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-danger">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
